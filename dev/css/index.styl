global-reset()

@import "common/*"

red=#da552f

body
  background-color:#efefef

.wrapper
  width:100%
  center()

.product
  background-color:#ffffff
  height:86px
  padding:12px 0px 10px 0px
  border-bottom:1px solid #eeeeee
  // border-top:1px solid #eeeeee
  // margin:16px 0px
  position:relative
  .comment
    font-size:10px
    color:red
    position:absolute
    top:12px
    right:10px
    padding:4px
    border-radius:3px


  .aside
    float:left
    width:90px
    height:60px
    padding-left:10px
    img
      opacity:0
      display:block
      width:100%
      height:100%
      transition: opacity 2s;
  .content
    padding-left:100px
    .title
      font-size:16px
    .description
      line-height:1.4
      margin-top:10px
      font-size:13px
      color:#999999

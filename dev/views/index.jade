include ./common/component

extends layout/default.jade

block head  
  title index
  +css("./css/index.css")

mixin product()
  .product
    .likes
      img(src="./img/icon-heart.png")
      span.txt 12
    .thumb
      img(onload="this.style.opacity=1")
    .content
      .angle
      //- .title The House Design
      //- .description It is designed by the famous person
      .title Home Garden厨房设计
      .description 非常精美别致的厨房设计，有设计大师Kindlie设计

block content
  .wrapper
    .design-list
      .design-template.hide
        +product()
    .more.hide Load more
  script.
    facade({
      entry:"novel-design-static/entries/index.js"
    })
   


